<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageOrderPurchased"
        android:layout_width="110dp"
        android:layout_height="150dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@mipmap/ic_launcher" />


    <TextView
        android:id="@+id/dateProductOrderPurchased"
        android:gravity="center"
        android:layout_width="254dp"
        android:layout_height="28dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:text="01/01/2022"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/imageOrderPurchased"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <TextView
        android:id="@+id/nameProductOrderPurchased"
        android:layout_width="254dp"
        android:layout_height="28dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="52dp"
        android:text="Điện thoại"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/imageOrderPurchased"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/quantityProductOrderPurchased"
        android:layout_width="100dp"
        android:layout_height="28dp"
        android:layout_marginStart="152dp"
        android:layout_marginTop="96dp"
        android:gravity="right"
        android:text="x2"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/imageOrderPurchased"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/priceProductOrderPurchased"
        android:layout_width="254dp"
        android:layout_height="28dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="136dp"
        android:gravity="center"
        android:text="50000$"
        android:textSize="20sp"
        android:textColor="@color/red"
        app:layout_constraintStart_toEndOf="@+id/imageOrderPurchased"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="9dp"
        android:background="#A9A9A9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageOrderPurchased" />

</androidx.constraintlayout.widget.ConstraintLayout>